wrapper()
  font-size: 0

  > *
    font-size: $font-size

col(cols = 1, gutters = both)
  min-height: 1px
  display: inline-block
  vertical-align: top
  padding-left: $gutter-half
  padding-right: $gutter-half
  font-size: $font-size
  width: 100%

cf()
  &:after
    content: ''
    display: table
    clear: both

em(lines = 1)
  ($line-height * lines)em

background-grid()
  @media (min-width: $breakpoint-sm) and (max-width: $breakpoint-md - 1)
    background-gradient($container-sm / $cols-number)
  @media (min-width: $breakpoint-md) and (max-width: $breakpoint-lg - 1)
    background-gradient($container-md / $cols-number)
  @media (min-width: $breakpoint-lg)
    background-gradient($container-lg / $cols-number)

background-gradient(col-width)
  gradient = ''
  color-transparent = 'rgba(0,0,0,0.01)'
  color-grid = 'rgba(0,0,0,0.05)'
  col-width-no-padding = col-width - $gutter
  gutter-width = $gutter
  gradient += color-transparent + ', '
  gradient += color-transparent + ' ' + ($gutter-half) + ', '
  gradient += color-grid + ' ' + ($gutter-half) + ', '
  gradient += color-grid + ' ' + ($gutter-half + col-width-no-padding) + ', '
  gradient += color-transparent + ' ' + ($gutter-half + col-width-no-padding) + ', '
  gradient += color-transparent + ' ' + ($gutter + col-width-no-padding)
  background-image: repeating-linear-gradient(unquote('to right, ' + gradient))

transparentBG()
  background-image: url("data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7")

sprite($url)
  background: url($url)

vertical-gradient()
  background-image: linear-gradient(to top, rgba(0, 0, 0, 0.1) 5%, rgba(0, 0, 0, 0) 5%)
  background-size: 100% ($line-height)em
  background-position: left top

anim()
  transition: all .1s ease-out


fontSerif()
  font-family: 'Playfair Display', serif

roundPlash($bg, $sprite)
  position: relative
  &:before
    content: ''
    display: block
    position: absolute
    width: 90px
    height: 90px
    border-radius: 50%
    background: $bg
    left: 50%
    top: 0
    margin-left: -45px
    margin-top: -30px
    z-index: -1

  &:after
    content: ''
    display: block
    position: absolute
    top: -12px
    left: 50%
    background: url('sprites/' + $sprite)
    transform: translateX(-50%)
