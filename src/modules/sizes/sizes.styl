.wrapper
  z-index: 1
  roundPlash(#F4F4F4, 'sprite-arrow-down-red.svg')
  //padding-bottom: 150px

.container
  background: #F4F4F4
  padding: 2em 0 0
  margin-bottom: 12em

  @media (max-width: $breakpoint-sm - 1)
    margin-bottom: 2em

.header
  color: $red
  margin-bottom: 2em

  h2:before
    font-size: 2.5em
    opacity: .05

.title
  font-weight: 700
  margin-bottom: 1em

.content
  position: relative

//.sides
//  cf()

.left,
.right
  width: 20%
  text-align: center
  padding-top: 1em

  @media (max-width: $breakpoint-sm - 1)
    width: 50%

.left
  float: left

.right
  float: right

.center
  float: left
  position: relative
  width: 60%
  border: 8px solid $white

  @media (max-width: $breakpoint-sm - 1)
    width: 100%


  img
    display: block

.picture
  position: absolute
  top: 30%
  left: 50%
  transform: translate(-50%, -50%)
  background-size: cover
  background-position: 50% 50%

.list
  display: block
  margin-bottom: 1em

  input
    display: none

input:checked + .name:before
  background: #ff5944


.name
  display: inline-block
  vertical-align: middle
  line-height: 1

  &:before
    content: ''
    display: inline-block
    vertical-align: top
    width: 17px
    height: 17px
    background: #d8d8d8
    border-radius: 50%
    margin-right: 1em
    margin-top: 2px
    anim()