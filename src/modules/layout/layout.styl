/*!!
 theme-name: scvt
 */

html
  margin: 0
  padding: 0
  font-family: 'Ubuntu', sans-serif
  font-weight: 300
  font-size: $font-size
  line-height: $line-height

body
  margin: 0
  padding: 0
  //vertical-gradient()

*, *:before, *:after
  box-sizing: border-box

img
  max-width: 100%

a
  color: inherit

h2
  fontSerif()
  font-size: 3.2em
  line-height: 1.1
  font-weight: 700
  text-align: center
  position: relative
  overflow: hidden
  margin: 0
  padding: .5em 0
  z-index: 1

  @media (max-width: $breakpoint-md - 1)
    font-size: 2.5em

  &:before
    content: attr(data-subtitle)
    position: absolute
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)
    margin-top: -14px
    color: $black
    font-size: 2em
    line-height: 1
    font-weight: 900
    font-style: italic
    opacity: .15
    z-index: -1

  &:after
    content: ''
    position: absolute
    display: block
    width: 130px
    height: 2px
    top: 100%
    left: 50%
    margin-left: -65px
    margin-top: -2px
    background: currentColor

button
  -webkit-appearance: none
  -moz-appearance: none
  cursor: pointer

  &::-moz-focus-inner
    padding: 0
    margin: 0

.popup
  display: none

:global
  //.r
  //  font-family: 'Rouble'
  //  display: inline

  .w
    wrapper()
    margin-left: auto
    margin-right: auto
    wrapper()
    @media (min-width: $breakpoint-sm) and (max-width $breakpoint-md - 1)
      width: $container-sm
    @media (min-width: $breakpoint-md) and (max-width $breakpoint-lg - 1)
      width: $container-md
    @media (min-width: $breakpoint-lg)
      width: $container-lg

  .wf
    wrapper()
    margin-left: -($gutter-half)
    margin-right: -($gutter-half)

    &:after
      content: ''
      display: table
      clear: both

  .wc
    .c
      vertical-align: middle
  .wb
    .c
      vertical-align: bottom

  .c
    col()

  for $col in (1..$cols-number)
    .c{$col}
      @media (min-width: $breakpoint-sm)
        width: round((100 / $cols-number * $col)%, 3)
    .c{$col}-md
      @media (min-width: $breakpoint-md) and (max-width: $breakpoint-lg - 1)
        width: round((100 / $cols-number * $col)%, 3)
    .c{$col}-sm
      @media (min-width: $breakpoint-sm) and (max-width: $breakpoint-md - 1)
        width: round((100 / $cols-number * $col)%, 3)
    .c{$col}-xs
      @media (max-width: $breakpoint-sm - 1)
        width: round((100 / $cols-number * $col)%, 3)
