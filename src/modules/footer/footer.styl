.wrapper
  background: #d2cec8

.content
  position: relative

.title
  cf()
  margin-bottom: 3em
  padding-top: 3em

  @media (max-width: $breakpoint-sm - 1)
    padding-top: .5em
    margin-bottom: .5em

.title-text
  line-height: 1.2
  padding-top: 6px

.logo
  float: left
  margin-right: $gutter

.text
  font-size: .7em
  margin-bottom: 4em

  @media (max-width: $breakpoint-sm - 1)
    margin-bottom: 1em

.politic
  text-decoration: underline

  &:hover
    text-decoration: none

.top
  display: block
  line-height: 1.2
  color: $red
  text-decoration: underline
  cursor: pointer
  margin-bottom: 2em

  &:hover
    text-decoration: none

  &:before
    content: ''
    float: left
    margin-right: 8px
    background: url(sprites/sprite-to-top.svg)

.map
  position: absolute
  right: 0
  bottom: 0
  width: 580px
  height: 580px
  background: $white

  @media (max-width: $breakpoint-lg - 1)
    height: 100%

  @media (max-width: $breakpoint-md - 1)
    width: 480px

  @media (max-width: $breakpoint-sm - 1)
    position: relative
    width: 100%
    height: 300px

  &:after
    content: ''
    position: absolute
    display: block
    border: 1px solid #E5E2E2
    border-radius: 6px
    top: -20px
    right: -20px
    left: -20px
    bottom: 0
    z-index: -1
    pointer-events: none

    @media (max-width: $breakpoint-lg - 1)
      display: none

.girl
  content: ''
  display: block
  position: absolute
  background: url(modules/footer/girl.png)
  background-size: cover
  width: 283px
  height: 100%
  right: 100%
  margin-right: -66px
  pointer-events: none
  z-index: 1

  @media (max-width: $breakpoint-lg - 1)
    margin-right: -47px
    width: 200px

  @media (max-width: $breakpoint-md - 1)
    background: none
    display: none

:global(#map)
  height: 100%
  background-size: cover
  background-position: 50% 50%

.socials
  margin: 1em 0

.social
  display: inline-block
  vertical-align: middle
  opacity: .7
  margin-right: .5em
  cursor: pointer
  anim()

  &:hover
    opacity: 1

for $icon in  'vk' 'fb' 'ok' 'ins'
  .{$icon}
    background: url('modules/footer/icons/sprite-icon-' + $icon + '.svg')