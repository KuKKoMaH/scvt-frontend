.wrapper
  padding: 1em 0

  @media (max-width: $breakpoint-sm - 1)
    padding: .5em 0

.logo
  @media (max-width: $breakpoint-sm - 1)
    text-align: center

  a
    display: block
    text-decoration: none
    
.image,
.title
  display: inline-block
  vertical-align: middle

.image
  margin-right: 1em
  @media (min-width: $breakpoint-sm) and (max-width: $breakpoint-md - 1)
    margin-right: .5em
    width: 30px

.title
  font-size: 1.2em
  line-height: 1
  text-align: left
  @media (max-width: $breakpoint-lg - 1)
    font-size: 1em

.small
  font-size: .8em

.menu
  @media (max-width: $breakpoint-sm - 1)
    margin: .5em 0

  ul
    margin: 0
    padding: 0
    text-align: justify
    //display: table-row
    font-size: 0

    &:after
      content: ''
      display: inline-block
      width: 100%
      height: 1px
      background: $red
      visibility: hidden
      overflow: hidden

  li
    //display: table-cell
    //text-align: center
    font-size: $font-size
    display: inline-block
    vertical-align: middle

  a
    color: $black
    text-decoration: none
    padding-bottom: 3px
    border-bottom: 2px solid transparent
    anim()

    &:hover
      color: $red
      //font-weight: bold
      border-color: $red

    @media (max-width: $breakpoint-lg - 1)
      font-size: .8em

    @media (max-width: $breakpoint-sm - 1)
      font-size: .7em

.contacts
  text-align: right
  line-height: 1

  @media (max-width: $breakpoint-sm - 1)
    text-align: center

  @media (max-width: $breakpoint-sm - 1)
    *
      display: inline-block
      vertical-align: middle
      margin: 0 .5em

.phone
  font-weight: bold
  font-size: 1.1em

  @media (max-width: $breakpoint-lg - 1)
    font-size: 1em

.code
  font-size: .8em

.callback
  position: relative